<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bootdo.freight.dao.WaybillInfoDao">

	<select id="get" resultType="com.bootdo.freight.domain.WaybillInfoDO">
		select `id`,`vehicle_no`,`waybill_date`,`sys_user_id`,`create_time`,`update_time` from t_waybill_info where id = #{value}
	</select>

	<select id="list" resultType="com.bootdo.freight.domain.WaybillInfoDO">
		select `id`,`vehicle_no`,`waybill_date`,`sys_user_id`,`create_time`,`update_time` from t_waybill_info
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="vehicleNo != null and vehicleNo != ''"> and vehicle_no = #{vehicleNo} </if>
		  		  <if test="waybillDate != null and waybillDate != ''"> and waybill_date = #{waybillDate} </if>
		  		  <if test="sysUserId != null and sysUserId != ''"> and sys_user_id = #{sysUserId} </if>
		  		  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		  		  <if test="updateTime != null and updateTime != ''"> and update_time = #{updateTime} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from t_waybill_info
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="vehicleNo != null and vehicleNo != ''"> and vehicle_no = #{vehicleNo} </if>
		  		  <if test="waybillDate != null and waybillDate != ''"> and waybill_date = #{waybillDate} </if>
		  		  <if test="sysUserId != null and sysUserId != ''"> and sys_user_id = #{sysUserId} </if>
		  		  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		  		  <if test="updateTime != null and updateTime != ''"> and update_time = #{updateTime} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.bootdo.freight.domain.WaybillInfoDO" useGeneratedKeys="true" keyProperty="id">
		insert into t_waybill_info
		(
			`vehicle_no`, 
			`waybill_date`, 
			`sys_user_id`, 
			`create_time`, 
			`update_time`
		)
		values
		(
			#{vehicleNo}, 
			#{waybillDate}, 
			#{sysUserId}, 
			#{createTime}, 
			#{updateTime}
		)
	</insert>
	 
	<update id="update" parameterType="com.bootdo.freight.domain.WaybillInfoDO">
		update t_waybill_info 
		<set>
			<if test="vehicleNo != null">`vehicle_no` = #{vehicleNo}, </if>
			<if test="waybillDate != null">`waybill_date` = #{waybillDate}, </if>
			<if test="sysUserId != null">`sys_user_id` = #{sysUserId}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from t_waybill_info where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from t_waybill_info where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>